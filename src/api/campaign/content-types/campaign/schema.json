{
  "kind": "collectionType",
  "collectionName": "campaigns",
  "info": {
    "singularName": "campaign",
    "pluralName": "campaigns",
    "displayName": "Campaign",
    "description": "AI-Lead-Magnet Campaigns"
  },
  "options": {
    "draftAndPublish": true,
    "comment": ""
  },
  "pluginOptions": {
    "content-manager": {
      "visible": true
    },
    "content-type-builder": {
      "visible": true
    }
  },
  "attributes": {
    "title": {
      "type": "string",
      "required": true,
      "maxLength": 255
    },
    "slug": {
      "type": "uid",
      "targetField": "title",
      "required": true
    },
    "description": {
      "type": "text"
    },
    "campaignType": {
      "type": "enumeration",
      "enum": ["quiz", "text", "image", "chatbot", "custom"],
      "default": "quiz",
      "required": true
    },
    "status": {
      "type": "enumeration", 
      "enum": ["draft", "active", "paused", "completed"],
      "default": "draft"
    },
    "isActive": {
      "type": "boolean",
      "default": false
    },
    "config": {
      "type": "json",
      "required": false,
      "default": {
        "type": "quiz",
        "questions": [],
        "scoring": {
          "logic": "weighted",
          "weights": {}
        },
        "styling": {
          "primaryColor": "#007bff",
          "secondaryColor": "#6c757d"
        },
        "behavior": {
          "showProgress": true,
          "allowBack": true,
          "randomizeQuestions": false,
          "conditionalLogic": false
        }
      }
    },
    "jsonCode": {
      "type": "text",
      "required": false,
      "maxLength": 50000,
      "default": "",
      "description": "Raw JSON configuration for bot-generated campaigns. Will override config field when present."
    },
    "aiPromptTemplate": {
      "type": "text",
      "required": false,
      "maxLength": 5000,
      "default": "Erstelle basierend auf den folgenden Antworten ein personalisiertes Ergebnis:\n\n{{responses}}\n\nKampagne: {{campaignTitle}}"
    },
    "aiProvider": {
      "type": "enumeration",
      "enum": ["openai", "claude", "gemini", "auto"],
      "default": "auto"
    },
    "aiModel": {
      "type": "string",
      "maxLength": 50,
      "default": "gpt-4"
    },
    "aiTemperature": {
      "type": "decimal",
      "min": 0,
      "max": 2,
      "default": 0.7
    },
    "aiMaxTokens": {
      "type": "integer",
      "min": 100,
      "max": 4000,
      "default": 1000
    },
    "emailTemplate": {
      "type": "text",
      "maxLength": 10000,
      "default": "Hallo {{firstName}},\n\nvielen Dank für Ihre Teilnahme an {{campaignTitle}}!\n\nIhr personalisiertes Ergebnis:\n{{aiResult}}\n\nBeste Grüße\nIhr GoAIX Team"
    },
    "emailSubject": {
      "type": "string",
      "maxLength": 200,
      "default": "Ihr personalisiertes Ergebnis von {{campaignTitle}}"
    },
    "googleSheetId": {
      "type": "string",
      "maxLength": 100,
      "regex": "^[a-zA-Z0-9-_]*$"
    },
    "maxLeads": {
      "type": "integer",
      "min": 0,
      "max": 100000
    },
    "currentLeadCount": {
      "type": "integer",
      "default": 0,
      "min": 0
    },
    "leads": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::lead.lead",
      "mappedBy": "campaign"
    }
  }
}