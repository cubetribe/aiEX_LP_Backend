{
  "kind": "collectionType",
  "collectionName": "campaigns",
  "info": {
    "singularName": "campaign",
    "pluralName": "campaigns",
    "displayName": "Campaign",
    "description": "AI-Lead-Magnet Campaigns"
  },
  "options": {
    "draftAndPublish": true,
    "comment": ""
  },
  "pluginOptions": {
    "content-manager": {
      "visible": true
    },
    "content-type-builder": {
      "visible": true
    }
  },
  "attributes": {
    "title": {
      "type": "string",
      "required": true,
      "maxLength": 255
    },
    "slug": {
      "type": "uid",
      "targetField": "title",
      "required": true
    },
    "description": {
      "type": "text"
    },
    "campaignType": {
      "type": "enumeration",
      "enum": ["quiz", "text", "image", "chatbot", "custom"],
      "default": "quiz",
      "required": true
    },
    "status": {
      "type": "enumeration", 
      "enum": ["draft", "active", "paused", "completed"],
      "default": "draft"
    },
    "isActive": {
      "type": "boolean",
      "default": false
    },
    "aiPromptTemplate": {
      "type": "text",
      "required": false,
      "maxLength": 5000,
      "default": "Erstelle basierend auf den folgenden Antworten ein personalisiertes Ergebnis:\n\n{{responses}}\n\nKampagne: {{campaignTitle}}"
    },
    "aiProvider": {
      "type": "enumeration",
      "enum": ["openai", "claude", "gemini", "auto"],
      "default": "auto"
    },
    "aiModel": {
      "type": "string",
      "maxLength": 50,
      "default": "gpt-4"
    },
    "aiTemperature": {
      "type": "decimal",
      "min": 0,
      "max": 2,
      "default": 0.7
    },
    "aiMaxTokens": {
      "type": "integer",
      "min": 100,
      "max": 4000,
      "default": 1000
    },
    "leads": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::lead.lead",
      "mappedBy": "campaign"
    }
  }
}