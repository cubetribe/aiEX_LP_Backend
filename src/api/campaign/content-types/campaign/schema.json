{
  "kind": "collectionType",
  "collectionName": "campaigns",
  "info": {
    "singularName": "campaign",
    "pluralName": "campaigns",
    "displayName": "Campaign",
    "description": "AI-Lead-Magnet Campaigns"
  },
  "options": {
    "draftAndPublish": true,
    "comment": ""
  },
  "pluginOptions": {
    "content-manager": {
      "visible": true
    },
    "content-type-builder": {
      "visible": true
    }
  },
  "attributes": {
    "title": {
      "type": "string",
      "required": true,
      "maxLength": 255
    },
    "slug": {
      "type": "uid",
      "targetField": "title",
      "required": true
    },
    "description": {
      "type": "text"
    },
    "campaignType": {
      "type": "enumeration",
      "enum": ["quiz", "text", "image", "chatbot", "custom"],
      "default": "quiz",
      "required": true
    },
    "status": {
      "type": "enumeration", 
      "enum": ["draft", "active", "paused", "completed"],
      "default": "draft"
    },
    "isActive": {
      "type": "boolean",
      "default": false
    },
    "leads": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::lead.lead",
      "mappedBy": "campaign"
    }
  }
}