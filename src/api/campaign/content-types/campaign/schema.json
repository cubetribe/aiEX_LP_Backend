{
  "kind": "collectionType",
  "collectionName": "campaigns",
  "info": {
    "singularName": "campaign",
    "pluralName": "campaigns",
    "displayName": "Campaign",
    "description": "AI-Lead-Magnet Campaigns"
  },
  "options": {
    "draftAndPublish": true,
    "comment": ""
  },
  "pluginOptions": {
    "content-manager": {
      "visible": true
    },
    "content-type-builder": {
      "visible": true
    }
  },
  "attributes": {
    "title": {
      "type": "string",
      "required": true,
      "maxLength": 255
    },
    "slug": {
      "type": "uid",
      "targetField": "title",
      "required": true
    },
    "description": {
      "type": "text"
    },
    "campaignType": {
      "type": "enumeration",
      "enum": ["quiz", "text", "image", "chatbot", "custom"],
      "default": "quiz",
      "required": true
    },
    "status": {
      "type": "enumeration", 
      "enum": ["draft", "active", "paused", "completed"],
      "default": "draft"
    },
    "isActive": {
      "type": "boolean",
      "default": false
    },
    "config": {
      "type": "json",
      "required": false,
      "default": {
        "type": "quiz",
        "questions": [],
        "scoring": {
          "logic": "weighted",
          "weights": {}
        },
        "styling": {
          "primaryColor": "#007bff",
          "secondaryColor": "#6c757d"
        },
        "behavior": {
          "showProgress": true,
          "allowBack": true,
          "randomizeQuestions": false,
          "conditionalLogic": false
        }
      }
    },
    "jsonCode": {
      "type": "text",
      "required": false,
      "maxLength": 50000,
      "default": "// Beispiel-Testkampagne:\n/*\n{\n  \"title\": \"Testkampagne – Funktionsprüfung\",\n  \"description\": \"Dies ist eine Testkampagne zur Überprüfung des Quiz-Flows.\",\n  \"scoring\": {\n    \"logic\": \"none\"\n  },\n  \"styling\": {\n    \"primaryColor\": \"#ff9800\",\n    \"secondaryColor\": \"#607d8b\"\n  },\n  \"behavior\": {\n    \"allowBack\": true,\n    \"showProgress\": true,\n    \"randomizeQuestions\": false\n  },\n  \"questions\": [\n    {\n      \"id\": \"testfrage_1\",\n      \"type\": \"single-choice\",\n      \"order\": 1,\n      \"question\": \"Magst du Pizza?\",\n      \"options\": [\n        \"Ja\",\n        \"Nein\",\n        \"Kommt drauf an\"\n      ],\n      \"required\": true\n    },\n    {\n      \"id\": \"testfrage_2\",\n      \"type\": \"text\",\n      \"order\": 2,\n      \"question\": \"Was möchtest du testen?\",\n      \"required\": false\n    }\n  ]\n}\n*/",
      "description": "Raw JSON configuration for bot-generated campaigns. Will override config field when present."
    },
    "previewUrl": {
      "type": "string",
      "required": false,
      "maxLength": 500,
      "description": "Auto-generated preview URL for this campaign"
    },
    "aiPromptTemplate": {
      "type": "text",
      "required": false,
      "maxLength": 5000,
      "default": "Erstelle basierend auf den folgenden Antworten ein personalisiertes Ergebnis:\n\n{{responses}}\n\nKampagne: {{campaignTitle}}"
    },
    "aiProvider": {
      "type": "enumeration",
      "enum": ["openai", "anthropic", "gemini", "auto"],
      "default": "auto",
      "required": false,
      "pluginOptions": {
        "content-manager": {
          "visible": false
        }
      }
    },
    "aiModel": {
      "type": "enumeration", 
      "enum": [
        "gpt-4o",
        "gpt-4.5",
        "o3",
        "claude-3.7-opus",
        "claude-3.7-sonnet",
        "claude-opus-4-20250514",
        "claude-sonnet-4-20250514",
        "gemini-2.5-pro",
        "gemini-2.5-flash"
      ],
      "default": "gpt-4o",
      "required": false
    },
    "aiTemperature": {
      "type": "decimal",
      "min": 0,
      "max": 2,
      "default": 0.7
    },
    "aiMaxTokens": {
      "type": "integer",
      "min": 100,
      "max": 4000,
      "default": 1000
    },
    "emailTemplate": {
      "type": "text",
      "maxLength": 10000,
      "default": "Hallo {{firstName}},\n\nvielen Dank für Ihre Teilnahme an {{campaignTitle}}!\n\nIhr personalisiertes Ergebnis:\n{{aiResult}}\n\nBeste Grüße\nIhr GoAIX Team"
    },
    "emailSubject": {
      "type": "string",
      "maxLength": 200,
      "default": "Ihr personalisiertes Ergebnis von {{campaignTitle}}"
    },
    "resultDeliveryMode": {
      "type": "enumeration",
      "enum": ["show_only", "email_only", "show_and_email"],
      "default": "show_only",
      "description": "How to deliver AI results to users"
    },
    "showResultImmediately": {
      "type": "boolean",
      "default": true,
      "description": "Show result on screen immediately after submission"
    },
    "requireEmailForResult": {
      "type": "boolean", 
      "default": false,
      "description": "Require email to view result"
    },
    "resultDisplayConfig": {
      "type": "json",
      "default": {
        "showOnScreen": true,
        "sendEmail": false,
        "emailRequired": false,
        "resultPageTitle": "Ihr personalisiertes Ergebnis",
        "resultPageSubtitle": "Basierend auf Ihren Antworten haben wir folgende Empfehlungen:",
        "showDownloadButton": true,
        "showShareButton": true,
        "redirectAfterResult": null,
        "autoRedirectDelay": 0
      }
    },
    "googleSheetId": {
      "type": "string",
      "maxLength": 100,
      "regex": "^[a-zA-Z0-9-_]*$"
    },
    "maxLeads": {
      "type": "integer",
      "min": 0,
      "max": 100000
    },
    "currentLeadCount": {
      "type": "integer",
      "default": 0,
      "min": 0
    },
    "leads": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::lead.lead",
      "mappedBy": "campaign"
    }
  }
}